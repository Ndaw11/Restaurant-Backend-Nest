generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


//Modele User

enum RoleUser {
  Admin
  Staff
  Client
}

model User{
  id           Int      @id @default(autoincrement())   // $ ID unique, s'incrémente automatiquement
  nom          String                                    // $ Nom de l'utilisateur
  email        String   @unique                          // $ Email, doit être unique
  role         RoleUser     @default(Client)
  motDePasse   String                                    // $ Mot de passe (on le chiffrera plus tard)
  createdAt    DateTime @default(now())                  // $ Date de création auto
}